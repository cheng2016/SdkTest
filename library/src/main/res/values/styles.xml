<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_pop" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="edittext_style">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">#ff868686</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/gray</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">@dimen/dialog_content_width</item>
        <item name="android:layout_height">38.0dip</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="pop_button">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/bg_003</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">@dimen/dialog_content_width</item>
        <item name="android:layout_height">38.0dip</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="pop_checkbox">
        <item name="android:textColor">#ffaeaeae</item>
        <item name="android:background">@drawable/checkbox_state</item>
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">10.0dip</item>
        <item name="android:button">@null</item>
    </style>
    <style name="pop_title">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
</resources>
